{
  "lerna": "2.2.0",
  "packages": [
    "packages/*",
    "examples/*",
    "tests"
  ],
  "version": "independent",
  "commands": {
    "boostrap": {
      "hoist": true
    },
    "publish": {
      "ignore": [
        "**/*.md",
        "**/package.json",
        "karma.conf.ts",
        "**/*.spec.ts",
        "**/*.snap"
      ],
      "allowBranch": "master"
    }
  }
}
